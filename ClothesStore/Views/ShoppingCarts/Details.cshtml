@model ClothesStore.Models.ShoppingCart

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
 <h4>ShoppingCart</h4>
 <hr />
 <dl class="dl-horizontal">
  <dt>
   @Html.DisplayNameFor(model => model.Sum)
  </dt>

  <dd>
   @Html.DisplayFor(model => model.Sum)
  </dd>

  <dt>
   @Html.DisplayNameFor(model => model.DateCreated)
  </dt>

  <dd>
   @Html.DisplayFor(model => model.DateCreated)
  </dd>

  <dt>
   @Html.DisplayNameFor(model => model.Paid)
  </dt>

  <dd>
   @Html.DisplayFor(model => model.Paid)
  </dd>
  

 </dl>
 <h3>Shopping cart contents</h3>
 <table class="table">
  <tr>
   <th>Item</th>
   <th>Price</th>
  </tr>
  @foreach (var item in Model.Items)
  {
   <tr>
    <td>@Html.DisplayFor(model => item.Name)</td>
    <td>@Html.DisplayFor(model => item.Price)</td>
   </tr>
  }
 </table>
</div>
<p>
 @if (Model.Paid == false)
 {
  @Html.ActionLink("Payment", "Pay", new { id = Model.Id })
  @: | 
 }
  @Html.ActionLink("Back to List", "Index")
</p>
